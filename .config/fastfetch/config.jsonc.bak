{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "display": {
        "separator": " : "
    },
    "modules": [
        {
            "type": "custom",
            "format": "\u001b[36m   HisKingIsDone's Arch Linux"
        },
        {
            "type": "custom",
            "format": "─────────────────────────────────────────────────────────"
        },
        {
            "type": "os",
            "key": "    OS",
            "keyColor": "red"
        },
        {
            "type": "kernel",
            "key": "    Kernel",
            "keyColor": "red"
        },
        {
            "type": "uptime",
            "key": "    Uptime",
            "keyColor": "red"
        },
        {
            "type": "packages",
            "key": "    Packages",
            "keyColor": "green"
        },
        {
            "type": "display",
            "key": "    Display",
            "keyColor": "green"
        },
        {
            "type": "wm",
            "key": "    WM",
            "keyColor": "yellow"
        },
        {
            "type": "terminal",
            "key": "    Terminal",
            "keyColor": "yellow"
        },
        {
            "type": "terminalfont",
            "key": "    Terminal Font",
            "keyColor": "yellow"
        },
        {
            "type": "terminaltheme",
            "key": "    Terminal Theme",
            "keyColor": "yellow"
        },
        {
            "type": "cpu",
            "format": "{1}",
            "key": "    CPU",
            "keyColor": "blue"
        },
        {
            "type": "gpu",
            "format": "{2}",
            "key": "    GPU",
            "keyColor": "blue"
        },
        {
            "type": "gpu",
            "format": "{3}",
            "key": "    GPU Driver",
            "keyColor": "magenta"
        },
        {
            "type": "memory",
            "key": "    Memory",
            "keyColor": "magenta"
        },
        {
            "type": "disk",
            "key": "    Disk",
            "folders" : "/",
            "format": "{1} / {2} ({3})",
            "keyColor": "white"
        },
        {
            "type": "custom",
            "format": "───────────────────────────────────────────────────────────"
        },
        "break",
        {
            "type": "colors",
            "paddingLeft": 2,
            "symbol": "circle"
        },
        "break"
    ]
}
