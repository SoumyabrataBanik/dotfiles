[Unit]
Description=Mount Google Drive with rclone
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount gdrive: /media/"Google Drive"
ExecStop=/bin/fusermount -u /media/"Google Drive"
User=Soumyabrata
Group=Soumyabrata
Restart=always
RestartSec=10

[Install]
WantedBy=default.target

